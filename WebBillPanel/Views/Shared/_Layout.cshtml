@{
    var Title = "Facturacion Electronica";
    var Empresa = "TI Soluciones";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - @Title</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,400italic,500,700,700italic" type="text/css">
   @* <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.blue_grey-red.min.css" />*@
    <link rel="stylesheet" href="~/Content/mdl1.2.1/material.css"/>
    @*<script src="~/Scripts/jquery-1.9.1.intellisense.js"></script>*@
    @if (IsSectionDefined("HeadSite"))
    {
        @RenderSection("HeadSite")
    }
</head>
<body>
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
    <header class="mdl-layout__header">
        <div class="mdl-layout__header-row">
            <!-- Title -->
            <span class="mdl-layout-title">@Title</span>
            <div class="mdl-layout-spacer"></div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable
                  mdl-textfield--floating-label mdl-textfield--align-right">
                <label class="mdl-button mdl-js-button mdl-button--icon"
                       for="search-input">
                    <i class="material-icons">search</i>
                </label>
                <div class="mdl-textfield__expandable-holder">
                    <input class="mdl-textfield__input" type="text" name="sample"
                           id="search-input">
                </div>
            </div>
        </div>
    </header>
    <div class="mdl-layout__drawer">
        <span class="mdl-layout-title">@Empresa</span>
        <nav class="mdl-navigation">
            <a class="mdl-navigation__link" href="@Url.Action("Index", "Home")">Home</a>
            <a class="mdl-navigation__link" href="mailto:webmaster@localhost.com?Subject=Facturacion Electronica">Contact</a>
            <a class="mdl-navigation__link" href="">About</a>
        </nav>
    </div>
    <main class="mdl-layout__content">
        <div class="page-content">
            @RenderBody()
        </div>
        <footer class="mdl-mini-footer">
            <div class="mdl-mini-footer__left-section">
                <div class="mdl-logo">@Empresa</div>
                <ul class="mdl-mini-footer__link-list">
                    <li><a href="#">Help</a></li>
                    <li><a href="#">Privacy & Terms</a></li>
                </ul>
            </div>
        </footer>
    </main>
    <div class="mdl-layout__obfuscator"></div>
</div>
<script src="~/Content/mdl1.2.1/material.js"></script>
<script src="~/Scripts/modernizr-2.6.2.js"></script>
<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
@if (IsSectionDefined("BottomSite"))
{
    @RenderSection("BottomSite")
}
</body>
</html>
